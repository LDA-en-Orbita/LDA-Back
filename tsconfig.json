{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "CommonJS",
    "moduleResolution": "node",

    "ignoreDeprecations": "5.0",

    "baseUrl": ".",
    "paths": {
      "@author/*": ["src/lib/Author/*"],
      "@book/*": ["src/lib/Book/*"],
      "@auth/*": ["src/lib/Auth/*"],
      "@shared/*": ["src/lib/shared/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": false,
    "strict": true,
    "skipLibCheck": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "removeComments": true,
    "importHelpers": true,
    "noEmitHelpers": true,

    "sourceMap": false,
    "inlineSourceMap": false,

    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/**/*.proto"
  ],
  "exclude": ["node_modules", "dist"]
}
